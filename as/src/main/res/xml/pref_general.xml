    <EditTextPreference
        android:defaultValue="100"
        android:hint="0..255"
        android:inputType="number"
        android:key="showPads"
        android:summary="0 for fully transparent, and 255 is opaque."
        android:title="Arrows transparency" />

    <EditTextPreference
        android:defaultValue="7"
        android:hint="1..100"
        android:inputType="number"
        android:key="wheelSens"
        android:summary="5..10 as usual, 1 for very sensitive"
        android:title="Wheel sensitivity" />

    <EditTextPreference
        android:defaultValue="5000"
        android:digits="0123456789"
        android:inputType="numberDecimal"
        android:key="keepaliveTimeout"
        android:maxLines="1"
        android:singleLine="true"
        android:title="Keep-alive timeout, ms" />

    <EditTextPreference
        android:inputType="textUri"
        android:key="videoURI"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="URI for video stream to play" />

    <Preference
        android:enabled="true"
        android:key="aboutSystem"
        android:title="About system" />

</PreferenceScreen>