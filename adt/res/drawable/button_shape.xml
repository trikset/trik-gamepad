<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <stroke
          android:width="1dp"
          android:color="@color/greenlight"/>
      <corners
          android:radius="6dp" />
      <padding
          android:left="15dp"
          android:top="10dp"
          android:right="15dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
        <solid android:color="@android:color/white" />        
        <stroke
          android:width="1dp"
          android:color="@color/greendark" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>